{
    "name": "nimbly/remodel",
    "description": "A simple data transformer for your API responses",
    "keywords": [
        "api",
        "response",
        "transformer"
    ],
    "type": "library",
    "require": {
        "php": ">=7.3|^8.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Brent Scheffler",
            "email": "brent@nimbly.io"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nimbly\\Remodel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nimbly\\Remodel\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "vimeo/psalm": "^4.0",
        "phpunit/phpunit": "^9.0",
        "php-coveralls/php-coveralls": "^2.1",
        "mtdowling/jmespath.php": "^2.4",
        "fzaninotto/faker": "^1.8",
        "symfony/var-dumper": "^4.2"
    }
}
